        <field name="chart_template_id" ref="l10n_ng"/>
        <field name="name">VAT(7.5%)</field>
        <field name="description">VAT @ 7.5%</field>
        <field eval="7.5" name="amount"/>
        <field name="amount_type">percent</field>
        <field name="type_tax_use">sale</field>
        <field name="tax_group_id" ref="tax_group_vat_ng"/>
